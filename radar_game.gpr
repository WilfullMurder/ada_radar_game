with "opengl";
with "opengl-glfw";
with "opengl-images";

project Radar_Game is
   for Source_Dirs use ("src", "src/controllers", "src/entities", "src/game", "src/input", "src/weapons");
   for Object_Dir use "obj";
   for Exec_Dir use "bin";
   for Main use ("radar_game.adb");

   package Compiler is
      for Default_Switches ("Ada") use ("-gnat2012", "-g", "-O2", "-gnatwu");
   end Compiler;

   package Binder is
      for Default_Switches ("Ada") use ("-Es");
   end Binder;

   package Linker is
      for Default_Switches ("Ada") use ("-lopengl32");
   end Linker;

end Radar_Game;
